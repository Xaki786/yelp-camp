<%include ../partials/header.ejs%>
<div class="row">
  <div class="col-sm-1 col-lg-4 col-md-3"></div>
  <div class="col-sm-10 col-lg-4 col-md-6">
    <h4 class="text-center mb-4">Edit Comment</h4>
    <form
      action="/campgrounds/<%=campgroundId%>/comments/<%=ejsComment.id%>?_method=PUT"
      class="form"
      method="POST"
    >
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          name="comment[text]"
          value="<%=ejsComment.text%>"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-block btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <div class="col-sm-1 col-lg-4 col-md-3"></div>
</div>
<%include ../partials/footer.ejs%>
