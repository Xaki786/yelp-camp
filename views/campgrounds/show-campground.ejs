<%include ../partials/header.ejs%>
<div class="row">
  <%if(ejsCampground){%>
  <div class="col-md-3">
    <ul class="list-group">
      <li class="list-group-item active">Image 1</li>
      <li class="list-group-item">Image 2</li>
      <li class="list-group-item">Image 3</li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="card">
      <figure class="figure">
        <img
          class="figure-img img-fluid rounded"
          title="<%=ejsCampground.name%>"
          src="<%=ejsCampground.url%>"
          alt="<%=ejsCampground.name%>"
        />
        <figcaption class="figure-caption d-flex">
          <span class="mr-auto"><%=ejsCampground.name %></span>
          <span class="ml-auto font-italic"
            >Submitted by
            <strong><%=ejsCampground.author.username %></strong>-</span
          >
          <span class="mr-3 font-italic">Date Created</span>
        </figcaption>
        <div class="d-flex my-2">
          <div class="ml-auto">
            <a
              href="/campgrounds/<%=ejsCampground.id%>/edit"
              class="btn btn-sm btn-info"
              >Edit</a
            >
          </div>
          <div class="mr-3 ml-1">
            <a href="#" class="btn btn-sm btn-danger">Delete</a>
          </div>
        </div>
      </figure>
      <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text"><%= ejsCampground.desc %></p>
      </div>
    </div>
  </div>
  <%}else{%>
  <h1>Campground Not Found</h1>
  <%}%>
</div>
<%include ../partials/footer.ejs%>
