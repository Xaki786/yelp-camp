<%include ../partials/header.ejs%>
<div class="row">
  <div class="col-sm-1 col-lg-4 col-md-3"></div>
  <div class="col-sm-10 col-lg-4 col-md-6">
    <h4 class="text-center mb-4">Edit Campground</h4>
    <form action="/campgrounds/<%=ejsCampground.id%>?_method=PUT" class="form" method="POST">
      <div class="form-group">
        <label for="name">Name: </label>
        <input type="text" class="form-control" placeholder="Enter campground's name here" name="campground[name]"
          value="<%=ejsCampground.name%>" id="name" />
      </div>
      <div class="form-group">
        <label for="url">Image url:</label>
        <input type="text" class="form-control" name="campground[url]" value="<%=ejsCampground.url%>" id="url"
          placeholder="Enter image url here" />
      </div>
      <div class="form-group">
        <label for="desc">Description: </label>
        <textarea name="campground[desc]" id="desc" cols="30" rows="5" class="form-control" placeholder="Enter description of the campground here"><%=ejsCampground.desc%></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-block btn-primary">Submit</button>
      </div>
    </form>
  </div>
  <div class="col-sm-1 col-lg-4 col-md-3"></div>
</div>
<%include ../partials/footer.ejs%>